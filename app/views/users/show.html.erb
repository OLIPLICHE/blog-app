<%= render partial: "user_card", object: @user, as: 'user' %>
<div class="container">
<div class="row m-4">
<div class="card bio">
<div class="card-body">
<p class="card-text"> <%= @user.bio %> </p>
</div>
</div>
</div>
</div>
<%  @posts.each  do |post| %>
<%= render partial: "recent_post/post_card", object: post, as: 'recent_post' %>
<% end %>
<div class="container">
<div class="row">
<div class="col text-center">
<a href="<%= @user.id %>/posts" class="btn btn-primary">See recent posts</a>
</div>
</div>
</div>