<div class="container">
  <div class="row m-4">
    <div class="card bio">
      <div class="card-body">
        <p class="card-title post-title"><%= post.title %></p>
        <p class="card-text post-text"><%= post.text %></p>
       <%# delete %>
        <% if can? :destroy, post %>
            <%= link_to "Delete", user_post_path(@user.id, posts.id),  data: { confirm: 'Are you sure you want to delete this post?' }, method: :delete %>
        <% end %>
        <div class="post-info d-flex justify-content-end">
          <p class="m-2"> Comment: <%= post.comments_counter %> </p>
          <p class="m-2"> Likes: <%= post.likes_counter %> </p>
        </div>
      </div>
    </div>
  </div>
</div>