<div class="container">
  <div class="row m-4">
    <div class="card bio">
      <div class="card-body d-inline-flex">
        <p class="comment-author"><%= comment.author.name %></p>
        <p><%= comment.text %></p>
        <% if can? :destroy, comment %>
          <div>
            <%= button_to "Delete", comment_path(comment.id), data: { confirm: 'Are you sure you want to delete this comment?' }, method: :delete %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>